<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingLeft="?android:expandableListPreferredChildIndicatorLeft"
        android:paddingStart="?android:expandableListPreferredChildIndicatorLeft"
        android:background="@drawable/btn_stroke_blue_xml"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/special_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/textlines"
            android:text="Chuyên ngành"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginStart="8dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="4"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="10"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_weight="1"></TextView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>