<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <ImageView
                android:id="@+id/img_Avatar_Studen_special_Com"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:background="@mipmap/ic_appwri"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_student_special_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Tên chuyên ngành"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toTopOf="@id/tv_namestudent_special_com"
                app:layout_constraintStart_toEndOf="@+id/img_Avatar_Studen_special_Com"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_namestudent_special_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Tên Học viên"
                android:textColor="#000"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/img_Avatar_Studen_special_Com"
                app:layout_constraintTop_toBottomOf="@+id/tv_student_special_com"/>
            <TextView
                android:id="@+id/tv_mhv_special_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mã học viên"
                android:textColor="#000"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_Avatar_Studen_special_Com"
                app:layout_constraintTop_toBottomOf="@+id/tv_namestudent_special_com"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <ImageView
                android:id="@+id/img_favoritestudent_special_com"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_baseline_star_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>